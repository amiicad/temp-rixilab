<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Super Admin Dashboard</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

  <link href="img/Rixi Lab New Logo PNG.png" rel="icon" />
  <link href="img/apple-touch-icon.png" rel="apple-touch-icon" />

  <style>
    body { 
      overflow-x: hidden; 
      background-color: #f8f9fa; 
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }
    .sidebar { 
      min-height: 100vh; 
      background: #212529; 
      color: white; 
      padding-top: 20px; 
    }
    .sidebar h4, .sidebar h5 {
      font-weight: 600;
    }
    .sidebar a { 
      color: white; 
      text-decoration: none; 
      display: flex; 
      align-items: center; 
      padding: 12px 20px; 
      border-radius: 6px; 
      margin-bottom: 8px; 
      transition: background 0.2s ease;
    }
    .sidebar a:hover { background: #343a40; }
    .sidebar i { margin-right: 10px; }
    .main-content { margin-left: 250px; padding: 30px; }
    .section-title { 
      font-weight: 700; 
      margin-bottom: 20px; 
      color: #212529; 
      border-left: 4px solid #0d6efd;
      padding-left: 10px;
    }
    .card {
      border-radius: 12px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .card:hover { 
      transform: translateY(-4px); 
      box-shadow: 0 6px 18px rgba(0,0,0,0.15); 
    }
    .card-body p {
      margin-bottom: 6px;
    }
    .btn-sm { font-weight: 500; }
    .modal-header { background-color: #0d6efd; color: white; }
    .modal-content { border-radius: 10px; }
  </style>
</head>
<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar position-fixed w-25">
      <h4 class="text-center mb-4">Super Admin Panel</h4>
      <h5 class="text-center mb-4"><%=superAdmin.name %></h5>
      <a href="#viewAdmin"><i class="bi bi-people"></i> View Admins</a>
      <a href="#viewInterns"><i class="bi bi-person-workspace"></i> View Interns</a>
      <a href="#createAdmin"><i class="bi bi-person-plus"></i> Create Admin</a>
      <a class="btn btn-danger w-75 mx-auto mt-3" href="/logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content flex-grow-1">
      <!-- Create Admin -->
      <section id="createAdmin" style="display:none;">
        <h4 class="section-title">Create Admin</h4>
        <div class="card p-4 shadow-sm mb-4">
          <form action="/create-admin" method="POST" class="row g-3">
            <div class="col-md-2"><input type="text" name="name" class="form-control" placeholder="Name" required></div>
            <div class="col-md-2"><input type="email" name="email" class="form-control" placeholder="Email" required></div>
            <div class="col-md-2"><input type="password" name="password" class="form-control" placeholder="Password" required></div>
            <div class="col-md-2">
              <select name="domain" class="form-select">
                <option value="" disabled selected>Domain</option>
                <option value="Web Development">Web Development</option>
                <option value="Graphics Designning">Graphics Designning</option>
                <option value="Data Analytics">Data Analytics</option>
                <option value="DSA in C++">DSA in C++</option>
                <option value="Java Programming">Java Programming</option>
                <option value="Python Programming">Python Programming</option>
              </select>
            </div>
            <div class="col-md-2"><input type="text" name="emp_id" class="form-control" placeholder="Employee ID"></div>
            <div class="col-md-2"><input type="text" name="phone" class="form-control" placeholder="Phone"></div>
            <div class="col-12"><button class="btn btn-primary w-100">Create Admin</button></div>
          </form>
        </div>
      </section>

      <!-- View Admins -->
      <section id="viewAdmin">
        <h4 class="section-title">Admins</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% admins.forEach(admin => { %>
          <div class="col">
            <div class="card h-100 shadow-sm border-0">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-primary fw-bold"><%= admin.name %></h5>
                <p><strong>Email:</strong> <%= admin.email %></p>
                <p><strong>Domain:</strong> <%= admin.domain %></p>
                <p><strong>Emp ID:</strong> <%= admin.emp_id %></p>
                <div class="mt-auto d-flex gap-2">
                  <a href="/superAdmin/admin/<%= admin._id %>" class="btn btn-info btn-sm flex-grow-1">View</a>
                  <button class="btn btn-warning btn-sm flex-grow-1" data-bs-toggle="modal" data-bs-target="#updateAdminModal<%= admin._id %>">Update</button>
                  <button class="btn btn-danger btn-sm flex-grow-1" data-bs-toggle="modal" data-bs-target="#deleteAdminModal<%= admin._id %>">Delete</button>
                </div>
              </div>
            </div>

            <!-- Update Admin Modal -->
            <div class="modal fade" id="updateAdminModal<%= admin._id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Update <%= admin.name %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <form action="/update-user/<%= admin._id %>" method="POST">
                    <div class="modal-body">
                      <label class="form-label">Name : </label>
                      <input type="text" name="name" class="form-control mb-2" value="<%= admin.name %>" required>
                      <label class="form-label">Email : </label>
                      <input type="email" name="email" class="form-control mb-2" value="<%= admin.email %>" required>
                      <label class="form-label">Emp Id : </label>
                      <input type="text" name="emp_id" class="form-control mb-2" value="<%= admin.emp_id %>" required>
                      <label class="form-label">Domain</label>
                      <input type="text" name="domain" class="form-control mb-2" value="<%= admin.domain %>" required>
                      <label class="form-label">Phone</label>
                      <input type="text" name="phone" class="form-control mb-2" value="<%= admin.phone %>" required>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <!-- Delete Admin Modal -->
            <div class="modal fade" id="deleteAdminModal<%= admin._id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Delete <%= admin.name %>?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">Are you sure you want to delete this admin?</div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/delete-user/<%= admin._id %>" method="POST">
                      <button class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <% }) %>
        </div>
      </section>

      <!-- View Interns -->
      <section id="viewInterns">
        <h4 class="section-title">Interns</h4>
               <!-- Batch Dropdown -->
      <div class="mb-3">
        <label for="batchFilter" class="form-label">Select Batch</label>
        <select id="batchFilter" class="form-select" onchange="filterByBatch()">
          <option value="all">All Batches</option>
          <% batches.forEach(batch => { %>
            <option value="<%= batch %>">Batch <%= batch %></option>
          <% }) %>
        </select>
      </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% interns.forEach(intern => { %>
          <div class="col intern-card" data-batch="<%= intern.batch_no %>">
            <div class="card h-100 shadow-sm border-0">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-success fw-bold"><%= intern.name %></h5>
                <p><strong>Email:</strong> <%= intern.email %></p>
                <p><strong>Domain:</strong> <%= intern.domain %></p>
                <div class="mt-auto d-flex gap-2">
                  <a href="/admin/intern/<%= intern._id %>" class="btn btn-info btn-sm flex-grow-1">View</a>
                  <button class="btn btn-danger btn-sm flex-grow-1" data-bs-toggle="modal" data-bs-target="#deleteInternModal<%= intern._id %>">Delete</button>
                </div>
              </div>
            </div>

            <!-- Delete Intern Modal -->
            <div class="modal fade" id="deleteInternModal<%= intern._id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Delete <%= intern.name %>?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">Are you sure you want to delete this intern?</div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/delete-user/<%= intern._id %>" method="POST">
                      <button class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <% }) %>
        </div>
      </section>

    </div>
  </div>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script>
    const sidebarLinks = document.querySelectorAll('.sidebar a');
    const sections = document.querySelectorAll('.main-content section');

    sidebarLinks.forEach(link => {
      const href = link.getAttribute('href');
      if (href.startsWith("#")) {
        link.addEventListener('click', e => {
          e.preventDefault();
          sections.forEach(sec => sec.style.display = 'none');
          const targetId = href.substring(1);
          const targetSection = document.getElementById(targetId);
          if (targetSection) targetSection.style.display = 'block';
        });
      }
    });
    function filterByBatch() {
    const selectedBatch = document.getElementById("batchFilter").value;
    const cards = document.querySelectorAll(".intern-card");

    cards.forEach(card => {
      if (selectedBatch === "all" || card.dataset.batch === selectedBatch) {
        card.style.display = "block";
      } else {
        card.style.display = "none";
      }
    });
  }
  window.onload = function () {
    document.getElementById("batchFilter").value = ""; // force "no batch selected"
    filterByBatch();
  };
    window.onload = function () {
    document.getElementById("batchFilter").value = ""; // force "no batch selected"
    filterByBatch();
  };
    // Show Interns by default
    // document.getElementById('viewInterns').style.display = 'block';
  </script>
</body>
</html>
