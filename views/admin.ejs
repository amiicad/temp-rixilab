<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<!-- Favicons -->
  <link href="img/Rixi Lab New Logo PNG.png" rel="icon">
  <link href="img/apple-touch-icon.png" rel="apple-touch-icon">   

  <style>
    body { overflow-x: hidden; background-color: #f0f2f5; }
    .sidebar { min-height: 100vh; background: #343a40; color: white; padding-top: 20px; }
    .sidebar a { color: white; text-decoration: none; display: flex; align-items: center; padding: 12px 20px; border-radius: 6px; margin-bottom: 5px; }
    .sidebar a:hover { background: #495057; }
    .sidebar i { margin-right: 10px; }
    .main-content { margin-left: 250px; padding: 30px; }
    .card:hover { transform: scale(1.03); transition: 0.3s; }
    .badge-pending { background-color: #ffc107; color: black; }
    .badge-approved { background-color: #28a745; }
    .badge-rejected { background-color: #dc3545; }
    .table td, .table th { vertical-align: middle; }
    .section-title { font-weight: 600; margin-bottom: 15px; }
    .modal-header { background-color: #343a40; color: white; }
  </style>
</head>
<body>
<div class="d-flex">

  <!-- Sidebar -->
  <div class="sidebar position-fixed w-25">
    <h4 class="text-center mb-4">Admin Panel</h4>
    <p><%= admin.name %></p>
    <a href="#viewInterns"><i class="bi bi-people"></i> View Interns</a>
    <a href="#createUser"><i class="bi bi-person-plus"></i> Create User</a>
    <a href="#uploadProject"><i class="bi bi-upload"></i> Upload Project</a>
    <a href="#confirmationMail"><i class="bi bi-envelope-check"></i> Send Confirmation Mail</a>
    <a href="#congratsMail"><i class="bi bi-gift"></i> Send Congratulations Mail</a>
    <a href="#viewProjects"><i class="bi bi-folder2-open"></i> View Project Submissions</a>
    <a href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main-content flex-grow-1">

    <!-- Create User -->
    <section id="createUser" style="display:none;">
      <h4 class="section-title">Create User</h4>
      <div class="card p-4 shadow-sm mb-4">
        <form action="/create-user" method="POST" class="row g-3">
          <div class="col-md-2"><input type="text" name="name" class="form-control" placeholder="Name" required></div>
          <div class="col-md-2"><input type="email" name="email" class="form-control" placeholder="Email" required></div>
          <div class="col-md-2"><input type="password" name="password" class="form-control" placeholder="Password" required></div>
          <div class="col-md-2"><input type="text" name="domain" class="form-control" placeholder="<%= admin.domain %>" value="<%= admin.domain %>"  readonly></div>
          <div class="col-md-2"><input type="text" name="college" class="form-control" placeholder="College"></div>
          <div class="col-md-2"><input type="text" name="university" class="form-control" placeholder="University"></div>
          <div class="col-md-2"><input type="text" name="phone" class="form-control" placeholder="Phone"></div>
          <div class="col-md-2"><input type="text" name="branch" class="form-control" placeholder="Branch"></div>
          <div class="col-md-2"><input type="text" name="course" class="form-control" placeholder="Course"></div>
          <div class="col-md-2"><input type="text" name="year_sem" class="form-control" placeholder="Year/Sem"></div>
          <div class="col-md-2"><input type="text" name="intern_id" class="form-control" placeholder="Intern ID"></div>
          <div class="col-md-2"><input type="text" name="duration"  class="form-control" placeholder="Duration"></div>
          <div class="col-md-2"><input type="text" name="batch_no" class="form-control" placeholder="Batch" ></div>
          <div class="col-md-2"><button class="btn btn-primary w-100">Create</button></div>
        </form>
      </div>
    </section>

    <!-- Upload Project -->
    <section id="uploadProject" style="display:none;">
      <h4 class="section-title">Upload Project</h4>
      <div class="card p-4 shadow-sm mb-4">
        <form action="/upload-project" method="POST" enctype="multipart/form-data" class="row g-3">
          <div class="col-md-3"><input type="text" name="title" class="form-control" placeholder="Title" required></div>
          <div class="col-md-3"><input type="text" name="description" class="form-control" placeholder="Description"></div>
          <div class="col-md-2"><input type="text" name="domain" class="form-control" placeholder="Domain" required></div>
          <div class="col-md-3"><input type="file" name="projectFile" class="form-control"></div>
          <div class="col-md-1"><button class="btn btn-success w-100">Upload</button></div>
        </form>
      </div>
    </section>

    <!-- Confirmation Mail -->
    <section id="confirmationMail" style="display:none;">
      <h4 class="section-title">Send Confirmation Mail</h4>
      <div class="card p-4 shadow-sm mb-4">
        <form action="/send-email" method="POST">
          <div class="mb-2">
            <input type="checkbox" id="selectAllConfirm" onclick="toggleConfirmAll()"> Select All
          </div>
          <% interns.forEach(i => { %>
            <div class="form-check">
              <input type="checkbox" name="internIds" value="<%= i._id %>" class="confirmCheckbox form-check-input" id="conf-<%= i._id %>">
              <label class="form-check-label" for="conf-<%= i._id %>"><%= i.name %> (<%= i.email %>)</label>
            </div>
          <% }) %>
          <button class="btn btn-primary mt-3">Send Confirmation</button>
        </form>
      </div>
    </section>

    <!-- Congratulations Mail -->
    <section id="congratsMail" style="display:none;">
      <h4 class="section-title">Send Congratulations Mail</h4>
      <div class="card p-4 shadow-sm mb-4">
        <form action="/send-email" method="POST">
          <div class="mb-2">
            <input type="checkbox" id="selectAllCongrats" onclick="toggleCongratsAll()"> Select All
          </div>
          <% interns.forEach(i => { %>
            <div class="form-check">
              <input type="checkbox" name="internIds" value="<%= i._id %>" class="congratsCheckbox form-check-input" id="cong-<%= i._id %>">
              <label class="form-check-label" for="cong-<%= i._id %>"><%= i.name %> (<%= i.email %>)</label>
            </div>
          <% }) %>
          <button class="btn btn-success mt-3">Send Congratulations</button>
        </form>
      </div>
    </section>

    <!-- View Interns (Default) -->
    <section id="viewInterns">
      <h4 class="section-title">Interns</h4>
       <!-- Batch Dropdown -->
      <div class="mb-3">
        <label for="batchFilter" class="form-label">Select Batch</label>
        <select id="batchFilter" class="form-select" onchange="filterByBatch()">
          <option value="all">All Batches</option>
          <% batches.forEach(batch => { %>
            <option value="<%= batch %>">Batch <%= batch %></option>
          <% }) %>
        </select>
      </div>

      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% interns.forEach(i => { %>
          <div class="col intern-card" data-batch="<%= i.batch_no %>">
            <div class="card h-100 shadow-sm border-primary">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= i.name %></h5>
                <p class="card-text">
                  <strong>Email:</strong> <%= i.email %><br>
                  <strong>Domain:</strong> <%= i.domain %><br>
                  <strong>Batch:</strong> <%= i.batch_no %>
                </p>
                <div class="mt-auto d-flex gap-2">
                  <a href="/admin/intern/<%= i._id %>" class="btn btn-info btn-sm flex-grow-1">View</a>
                  <button class="btn btn-warning btn-sm flex-grow-1" data-bs-toggle="modal" data-bs-target="#updateModal<%= i._id %>">Update</button>
                </div>
              </div>
            </div>

            <!-- Update Modal -->
            <div class="modal fade" id="updateModal<%= i._id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header"><h5 class="modal-title">Update <%= i.name %></h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                  <form action="/update-user/<%= i._id %>" method="POST">
                    <div class="modal-body">
                      <input type="text" name="name" class="form-control mb-2" value="<%= i.name %>" required>
                      <input type="email" name="email" class="form-control mb-2" value="<%= i.email %>" required>
                      <input type="text" name="phone" class="form-control" value="<%= i.phone %>">
                      <input type="text" name="college" class="form-control" value="<%= i.college %>">
                      <input type="text" name="university" class="form-control" value="<%= i.university %>">
                      <input type="text" name="course" class="form-control" value="<%= i.course %>">
                      <input type="text" name="branch" class="form-control" value="<%= i.branch %>">
                      <input type="text" name="year_sem" class="form-control" value="<%= i.year_sem %>">
                      <input type="text" name="batch_no" class="form-control" value="<%= i.batch_no %>" readonly>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

          </div>
        <% }) %>
      </div>
    </section>

    <!-- Project Submissions -->
    <section id="viewProjects" style="display:none;">
      <h4 class="section-title">Project Submissions</h4>
      <% projects.forEach(p => { %>
        <div class="card mb-3 shadow-sm border-success">
          <div class="card-header bg-success text-white">
            <h6><%= p.title %> (<%= p.domain %>)</h6>
          </div>
          <div class="card-body">
            <p><%= p.description %></p>
            <% if(p.file){ %>
              <a href="/download/<%= p.file %>" class="btn btn-light btn-sm mb-2">Download Project File</a>
            <% } %>
            <h6 class="mt-3">Submissions</h6>
            <div class="table-responsive">
              <table class="table table-sm table-bordered table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Intern ID</th>
                    <th>Name</th>
                    <th>File</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% p.submissions.forEach(s => { %>
                    <tr>
                      <td><%= s.internId._id %></td>
                      <td><%= s.internId.name %></td>
                      <td><%= s.file %></td>
                      <td>
                        <span class="badge <%= s.status==='pending'?'badge-pending':s.status==='approved'?'badge-approved':'badge-rejected' %>">
                          <%= s.status.charAt(0).toUpperCase() + s.status.slice(1) %>
                        </span>
                      </td>
                      <td class="d-flex gap-1">
                        <% if(s.status==='pending'){ %>
                          <form action="/submission/<%= p._id %>/<%= s.internId._id %>" method="POST" class="d-inline">
                            <input type="hidden" name="action" value="approved">
                            <button class="btn btn-success btn-sm">Approve</button>
                          </form>
                          <form action="/submission/<%= p._id %>/<%= s.internId._id %>" method="POST" class="d-inline">
                            <input type="hidden" name="action" value="rejected">
                            <button class="btn btn-danger btn-sm">Reject</button>
                          </form>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% }) %>
    </section>

  </div>
</div>

<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
  const sidebarLinks = document.querySelectorAll('.sidebar a');
  const sections = document.querySelectorAll('.main-content section');

sidebarLinks.forEach(link => {
  const href = link.getAttribute('href');

  if (href.startsWith("#")) {
    link.addEventListener('click', e => {
      e.preventDefault();
      const targetId = href.substring(1);
      sections.forEach(sec => sec.style.display = 'none');
      const targetSection = document.getElementById(targetId);
      if (targetSection) targetSection.style.display = 'block';
    });
  }
});


  function toggleConfirmAll() {
    const checked = document.getElementById('selectAllConfirm').checked;
    document.querySelectorAll('.confirmCheckbox').forEach(c => c.checked = checked);
  }
  function toggleCongratsAll() {
    const checked = document.getElementById('selectAllCongrats').checked;
    document.querySelectorAll('.congratsCheckbox').forEach(c => c.checked = checked);
  }

function filterByBatch() {
    const selectedBatch = document.getElementById("batchFilter").value;
    const cards = document.querySelectorAll(".intern-card");

    cards.forEach(card => {
      if (selectedBatch === "all" || card.dataset.batch === selectedBatch) {
        card.style.display = "block";
      } else {
        card.style.display = "none";
      }
    });
  }

  // Run once on page load to hide all
  window.onload = function () {
    document.getElementById("batchFilter").value = ""; // force "no batch selected"
    filterByBatch();
  };
</script>
</body>
</html>
