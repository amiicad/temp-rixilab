              <div class="col-md-2 d-flex gap-2 justify-content-end">
                <a href="/admin/intern/<%= i._id %>" class="btn btn-info btn-sm">View</a>
                <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#updateModal<%= i._id %>">Update</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Update Intern Modal -->
        <div class="modal fade" id="updateModal<%= i._id %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update <%= i.name.trim() %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form action="/update-user/<%= i._id %>" method="POST" class="needs-validation" novalidate>
        <div class="modal-body">
          <div class="row">
            <!-- Name + Email -->
            <div class="col-md-6 mb-2">
              <label class="form-label">Name:</label>
              <input type="text" name="name" class="form-control" value="<%= i.name %>" required>
            </div>
            <div class="col-md-6 mb-2">
              <label class="form-label">Email:</label>
              <input type="email" name="email" class="form-control" value="<%= i.email %>" required>
            </div>

            <!-- Phone + College -->
            <div class="col-md-6 mb-2">
              <label class="form-label">Phone:</label>
              <input type="text" name="phone" class="form-control" value="<%= i.phone %>">
            </div>
            <div class="col-md-6 mb-2">
              <label class="form-label">College:</label>
              <input type="text" name="college" class="form-control" value="<%= i.college %>">
            </div>

            <!-- Batch No + Certificate ID -->
            <div class="col-md-6 mb-2">
              <label class="form-label">Batch No:</label>
              <input type="text" name="batch_no" class="form-control" value="<%= i.batch_no %>" readonly>
            </div>
            <div class="col-md-6 mb-2">
              <label class="form-label">Certificate ID:</label>
              <input type="text" name="certificate_id" class="form-control" value="<%= i.certificate_id %>">
            </div>

            <!-- University + Course -->
            <div class="col-md-6 mb-2">
              <label class="form-label">University:</label>
              <input type="text" name="university" class="form-control" value="<%= i.university %>">
            </div>
            <div class="col-md-6 mb-2">
              <label class="form-label">Course:</label>
              <input type="text" name="course" class="form-control" value="<%= i.course %>">
            </div>

            <!-- Branch + Year/Sem -->
            <div class="col-md-6 mb-2">
              <label class="form-label">Branch:</label>
              <input type="text" name="branch" class="form-control" value="<%= i.branch %>">
            </div>
            <div class="col-md-6 mb-2">
              <label class="form-label">Y/S:</label>
