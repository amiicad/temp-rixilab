              <tr class="project-row" data-batch="<%= p.batch_no %>">
                <td><%= p.title %></td>
                <td><%= p.week %></td>
                <td><%= p.batch_no %></td>
                <td><%= p.domain %></td>
                <td class="d-flex justify-content-evenly">
                  <button class="btn btn-outline-secondary btn-sm px-3 rounded-pill" data-bs-toggle="modal" data-bs-target="#updateModal<%= p._id %>">Update</button>
                  <button class="btn btn-outline-danger btn-sm px-3 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#deleteProjectModal<%= p._id %>">Delete</button>
                </td>
              </tr>

              <!-- Update Modal -->
              <div class="modal fade" id="updateModal<%= p._id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Update <%= p.title %></h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/admin/project/update/<%= p._id %>" method="POST">
                      <div class="modal-body">
                        <label class="form-label">Title :</label>
                        <input type="text" name="title" class="form-control mb-2" value="<%= p.title %>" required>

                        <label class="form-label">Description :</label>
                        <textarea name="description" class="form-control mb-2"><%= p.description %></textarea>

                        <label class="form-label">Domain :</label>
                        <input type="text" name="domain" class="form-control" value="<%= p.domain %>">

                        <label class="form-label">Week :</label>
                        <input type="number" name="week" class="form-control" value="<%= p.week %>" min="1" max="8" required>

                        <label class="form-label">Batch :</label>
                        <input type="number" name="batch_no" class="form-control" value="<%= p.batch_no %>">

                        <label class="form-label">Upload Link :</label>
                        <input type="text" name="uploadLink" class="form-control" value="<%= p.uploadLink %>">

                        <label class="form-label">Download Link :</label>
                        <input type="text" name="downloadLink" class="form-control" value="<%= p.downloadLink %>">
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

              <!-- Delete Modal -->
              <div class="modal fade" id="deleteProjectModal<%= p._id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Delete <%= p.title %>?</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      Are you sure you want to delete this project?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <form action="/delete-project/<%= p._id %>" method="POST" style="display:inline;">
                        <button class="btn btn-danger" type="submit">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>





    <!-- Submitted Projects -->


<section id="submittedProjects" style="display:none;">
  <h4 class="section-title text-center mb-2">Submitted Projects</h4>

  <% var currentSubmittedBatch = typeof submittedBatch !== 'undefined' ? submittedBatch : 'all'; %>

  <!-- Filters -->
  <div class="mb-3 d-flex align-items-center flex-wrap gap-3">
    <!-- Batch Filter -->
    <div class="flex-grow-1">
      <select class="form-select" id="submittedBatchFilter" onchange="applySubmittedFilters()">
        <option value="all" <%= currentSubmittedBatch === 'all' ? 'selected' : '' %>>All Batches</option>
        <% batches.forEach(batch => { %>
          <option value="<%= batch %>" <%= currentSubmittedBatch === batch ? 'selected' : '' %>>Batch <%= batch %></option>
        <% }) %>
      </select>
    </div>

    <!-- Intern Search (UNIQUE ID) -->
    <div class="flex-grow-1">
      <input type="text" id="submittedInternSearch" class="form-control"
             placeholder="Enter Intern ID" onkeyup="applySubmittedFilters()">
    </div>

    <!-- Clear Filters -->
    <div class="align-self-end">
      <button class="btn btn-secondary" onclick="clearSubmittedFilters()">Clear Filters</button>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-1 g-8">
    <% interns.forEach(intern => { %>
      <% if (Array.isArray(intern.projectAssigned) && intern.projectAssigned.length > 0) { %>
        <% if (currentSubmittedBatch === 'all' || intern.batch_no === currentSubmittedBatch) { %>
          <div class="col mb-3 intern-card" data-batch="<%= intern.batch_no %>">
            <div class="card shadow-sm" style="border-color: #ff6600 !important;">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="h5 mb-0"><%= intern.name %> (<%= intern.batch_no %>)</span>
                  <span>
                    <b>Email:</b> <%= intern.email %>&nbsp;&nbsp;
                    <b>Intern ID:</b>
                    <span class="intern-id d-none"><%= intern.intern_id %></span>
                    <%= intern.intern_id %>
                  </span>
                </div>

                <table class="table table-bordered">
                  <thead>
                    <tr style="text-align:center;">
                      <th>Project Title</th>
                      <th>Week</th>
                      <th>Status</th>
                      <th>Update Status</th>
                    </tr>
                  </thead>
                  <tbody style="text-align:center;">
                    <% intern.projectAssigned.forEach(sub => { %>
                      <tr>
                        <td><%= sub.projectId ? sub.projectId.title : 'N/A' %></td>
                        <td>Week <%= sub.week %></td>
                        <td>
                          <%
                            let badgeClass = 'badge-pending';
                            if (sub.status === 'accepted') badgeClass = 'badge-approved';
                            else if (sub.status === 'rejected') badgeClass = 'badge-rejected';
                          %>
                          <span class="badge <%= badgeClass %>"><%= sub.status %></span>
                        </td>
                        <td>
                          <form method="POST" action="/admin/projects/update-status" class="d-flex align-items-center gap-2">
                            <input type="hidden" name="userId" value="<%= intern._id %>">
                            <input type="hidden" name="projectId" value="<%= sub.projectId ? sub.projectId._id : sub.projectId %>">
                            <select name="status" class="form-select form-select-sm">
                              <option value="accepted" <%= sub.status === 'accepted' ? 'selected' : '' %>>Approve</option>
                              <option value="rejected" <%= sub.status === 'rejected' ? 'selected' : '' %>>Reject</option>
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>

              </div>
            </div>
          </div>
        <% } %>
      <% } %>
    <% }) %>
  </div>
</section>



