  <div class="container p-0 " >
    <div class="card shadow-sm border rounded p-4 "style="border: 1px solid #ff6600 !important;" >
      <!-- Section Header -->
      <h4 class="text-center mb-3">Total Assigned Projects</h4>

      <!-- Filters Row -->
      <div class="row mb-3 g-2 justify-content-center">
        <div class="col-md-3  flex-grow-1">
          <select id="projectBatchFilter" class="form-select" onchange="filterProjectsByBatch()">
            <option value="all" selected>All Batches</option>
            <% batches.forEach(batch => { %>
              <option value="<%= batch %>">Batch <%= batch %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Project Table -->
      <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
        <table class="table table-striped table-bordered align-middle text-center mb-0">
          <!-- Sticky Table Header -->
          <thead class="table-light" style="position: sticky; top: 0; z-index: 2;">
            <tr>
              <th>Title</th>
              <th>Week</th>
              <th>Batch</th>
              <th>Domain</th>
              <th style="width: 200px;">Actions</th>
            </tr>
          </thead>
